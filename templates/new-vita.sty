    {\scriptsize  \texttt{\href{\@www}{\@www}}}
  \end{minipage}

  \bigskip
  \bigskip

  %% Name 
  \noindent{\LARGE\scshape{\@title\ \@name}} {\scriptsize \textsc{\@postnoms}}\\

}


